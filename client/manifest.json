{
  "manifest_version": 2,

  "name": "BitClip",
  "description": "BitClip: A simple, secure client-side Bitcoin wallet.",
  "version": "0.4",

  "icons": {
    "16": "assets/bitcoin_16.png",
    "48": "assets/bitcoin_48.png",
    "128": "assets/bitcoin_128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "assets/bitcoin_19.png",
      "38": "assets/bitcoin_38.png"
    },
    "default_title": "BitClip",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}
